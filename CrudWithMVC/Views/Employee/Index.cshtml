@model IEnumerable<CrudWithMVC.Models.Employee>

@{
}
<h1> Employee Index</h1>
<a asp-action="Create" asp-controller="Employee" class="btn btn-outline-danger">Create</a>
<table class=" table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gander</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>

    @foreach (var emp in Model)
	{
		 <tr>
             <td>@emp.Id</td>
             <td>@emp.Name</td>
             <td>@emp.Email</td>
             <td>@emp.Gander</td>
             <td>@emp.Address</td>
             <td>
                 <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.Id"
                    onclick="return confirm('are you sure to delete this record')">Edit</a> ||

                 <a asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.Id"
                    onclick="return confirm('are you sure to delete this record')">Delete</a> ||
        
            <a asp-action="Details" asp-controller="Employee" asp-route-id="@emp.Id"
                onclick="return confirm('are you sure to delete this record')" >Details</a>
             </td>
         </tr>
	}
</table>